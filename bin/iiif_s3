#!/usr/bin/env ruby

require 'rubygems'
require 'commander/import'
require 'iiif_s3'

program :version, IiifS3::VERSION
program :description, 'Generate a Amazon S3 server with IIIF compatible tiles and metadata'

default_command :publish

command :publish do |c|
  c.syntax = 'iiif_s3 publish [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Iiif_s3::Commands::Publish
  end
end

command :test do |c|
  c.syntax = 'iiif_s3 test [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Iiif_s3::Commands::Test
  end
end

command :validate do |c|
  c.syntax = 'iiif_s3 validate [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Iiif_s3::Commands::Validate
  end
end

